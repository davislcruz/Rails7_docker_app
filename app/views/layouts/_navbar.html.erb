<nav class="top-0 absolute z-50 w-full flex flex-wrap items-center justify-between px-2 py-3 mb-3 bg-stone-900 opacity-75 text-slate-100 hover:opacity-80" id="navbarID">
  <div class="container px-4 mx-auto flex flex-wrap items-center justify-between">
    <div class="w-full relative flex justify-between lg:w-auto  px-4 lg:static lg:block lg:justify-start">
      <%= link_to "/posts", class: "inline-block mr-4 py-2 whitespace-nowrap flex items-center text-lg uppercase font-bold leading-relaxed text-slate-100 opacity-75 hover:opacity-95 hover:text-white", id: "brandID" do %>
        <span class="text-sm">daviscruz.com</span>
      <% end %>
      <button class="cursor-pointer text-xl leading-none px-3 py-1 border border-solid border-transparent rounded bg-transparent block lg:hidden outline-none focus:outline-none" type="button" onclick="toggleNavbar('collapse-navbar')">
        <i class="text-white fas fa-bars"></i>
      </button>
    </div>
    <div class="lg:flex flex-grow items-center hidden" id="collapse-navbar">
      <ul class="flex flex-col lg:flex-row list-none ml-auto">
        <li class="nav-item">
          <%= link_to "/pages/profile", class: "px-3 py-2 flex items-center text-xs uppercase font-bold leading-snug text-white hover:opacity-75" do %>
            <i class="fa-solid fa-circle-user text-lg leading-lg text-white opacity-75"></i>
            <span class="ml-2">Profile</span>
          <% end %>
        </li>
        <li class="nav-item">
          <a class="px-3 py-2 flex items-center text-xs uppercase font-bold leading-snug text-white hover:opacity-75" href="#pablo">
            <i class="fab fa-twitter text-lg leading-lg text-white opacity-75"></i><span class="ml-2">Tweet</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="px-3 py-2 flex items-center text-xs uppercase font-bold leading-snug text-white hover:opacity-75" href="#pablo">
            <i class="fab fa-pinterest text-lg leading-lg text-white opacity-75"></i><span class="ml-2">Pin</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>
<script>
  function toggleNavbar(collapseID){
    document.getElementById("navbarID").classList.toggle("bg-stone-900");
    document.getElementById("navbarID").classList.toggle("text-slate-100");
    document.getElementById("navbarID").classList.toggle("text-slate-950");
    document.getElementById("navbarID").classList.toggle("opacity-75");
    document.getElementById(collapseID).classList.toggle("hidden");
    document.getElementById(collapseID).classList.toggle("block");
    document.getElementById(collapseID).classList.toggle("rounded");
    document.getElementById(collapseID).classList.toggle("shadow-lg");
    document.getElementById(collapseID).classList.toggle("bg-stone-900");
    document.getElementById(collapseID).classList.toggle("opacity-75");
    document.getElementById(collapseID).classList.toggle("hover:opacity-95");
    document.getElementById("brandID").classList.toggle("text-slate-100");
    document.getElementById("brandID").classList.toggle("text-slate-950")
    document.getElementById("brandID").classList.toggle("hover:opacity-95")






  }
</script>
